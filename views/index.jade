doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title Bootshop online Shopping cart
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='')
    meta(name='author', content='')
    // Bootstrap style
    link#callCss(rel='stylesheet', href='themes/bootshop/bootstrap.min.css', media='screen')
    link(href='themes/css/base.css', rel='stylesheet', media='screen')
    // Bootstrap style responsive
    link(href='themes/css/bootstrap-responsive.min.css', rel='stylesheet')
    link(href='themes/css/font-awesome.css', rel='stylesheet', type='text/css')
    // Google-code-prettify
    link(href='themes/js/google-code-prettify/prettify.css', rel='stylesheet')
    // fav and touch icons
    link(rel='shortcut icon', href='themes/images/ico/favicon.ico')
    style#enject(type='text/css').
  body
    #header
      .container
        #welcomeLine.row
          .span6
            | Welcome!
            strong  User
        // Navbar ==================================================
        #logoArea.navbar
          .navbar-inner
            a.brand(href='/')
              img(src='themes/images/logo.png', alt='Bootsshop')
            ul#topMenu.nav.pull-right
              li
                a(href='/search') Advanced Search
              li
                a(href='/newoffer') New Offer
              li
                a(href='/contact') Contact
              li
                a(href='/login', role='button', data-toggle='modal', style='padding-right:0')
                  span.btn.btn-large.btn-success Login
                #login.modal.hide.fade.in(tabindex='-1', role='dialog', aria-labelledby='login', aria-hidden='false')
                  .modal-header
                    button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
                    h3 Login Block
                  .modal-body
                    form.form-horizontal.loginFrm
                      .control-group
                        input#inputEmail(type='text', placeholder='Email')
                      .control-group
                        input#inputPassword(type='password', placeholder='Password')
                      .control-group
                        label.checkbox
                          input(type='checkbox')
                          |  Remember me
                    button.btn.btn-success(type='submit') Sign in
                    button.btn(data-dismiss='modal', aria-hidden='true') Close
    // Header End======================================================================
    #mainBody
      .container
        .row
          // Sidebar ==================================================
          #sidebar.span3
            ul#sideManu.nav.nav-tabs.nav-stacked
              li
                a(href='/electronic_products') Electronics
              li
                a(href='/clothes_products') Clothes
              li
                a(href='/health_products') Health & Beauty
              li
                a(href='/sport_products') Sport & Leisure
              li
                a(href='/books_products') Books & Entertainments
            br
            br
            br
            .thumbnail
              img(src='themes/images/payment_methods.png', title='Bootshop Payment Methods', alt='Payments Methods')
              .caption
                h5 Payment Methods
          // Products area===============================================
          .span9
            h4 Products 
            ul.thumbnails
              // ROUND 1 =============================
              - for post in posts
                    - var image = "themes/images/products/" + post.image
                    li.span3
                        .thumbnail
                        a(href='/productdetails')
                            img(src="themes/images/products/" + post.image, alt='')
                        .caption
                            h5 #{post.item}
                            p
                            | #{post.description}
                            h4(style='text-align:center')
                            a.btn(href='/productdetails')
                                i.icon-zoom-in
                            a.btn.btn-primary(href='#') $#{post.price}
    // Footer ==================================================================
    #footerSection
      .container
        .row
          .span3
            h5 ACCOUNT
            a(href='login.html') YOUR ACCOUNT
            a(href='login.html') PERSONAL INFORMATION
            a(href='login.html') ADDRESSES
            a(href='login.html') DISCOUNT
            a(href='login.html') ORDER HISTORY
          .span3
            h5 INFORMATION
            a(href='contact.html') CONTACT
            a(href='register.html') REGISTRATION
            a(href='legal_notice.html') LEGAL NOTICE
            a(href='tac.html') TERMS AND CONDITIONS
            a(href='faq.html') FAQ
          .span3
            h5 OUR OFFERS
            a(href='#') NEW PRODUCTS
            a(href='#') TOP SELLERS
            a(href='special_offer.html') SPECIAL OFFERS
            a(href='#') MANUFACTURERS
            a(href='#') SUPPLIERS
          #socialMedia.span3.pull-right
            h5 SOCIAL MEDIA 
            a(href='#')
              img(width='60', height='60', src='themes/images/facebook.png', title='facebook', alt='facebook')
            a(href='#')
              img(width='60', height='60', src='themes/images/twitter.png', title='twitter', alt='twitter')
            a(href='#')
              img(width='60', height='60', src='themes/images/youtube.png', title='youtube', alt='youtube')
        p.pull-right © GreenShop
      // Container End
    // Placed at the end of the document so the pages load faster =============================================
    script(src='themes/js/jquery.js', type='text/javascript')
    script(src='themes/js/bootstrap.min.js', type='text/javascript')
    script(src='themes/js/google-code-prettify/prettify.js')
    script(src='themes/js/bootshop.js')
    script(src='themes/js/jquery.lightbox-0.5.js')
    span#themesBtn
